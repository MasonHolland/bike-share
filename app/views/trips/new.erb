
<title>New Trip</title>

<h1>New Trip</h1>

<form action="/trips" method="post">
  <p>Create A New Trip</p>
  Starting Station<select name="starting_station[name]">
    <% @stations.each do |station| %>
    <option value="<%= station.name %>"><%= station.name %></option>
    <% end %>
  </select><br>
  Ending Station<select name="ending_station[name]">
    <% @stations.each do |station| %>
    <option value="<%= station.name %>"><%= station.name %></option>
    <% end %>
  </select><br>
  Bike ID<input type="integer" name="trip[id]"/><br>
  Duration<input type="number" name="trip[duration]"/><br>
  Start Date<input type="date" name="trip[start_Date]"/><br>
  End Date<input type="date" name="trip[end_date]"/><br>
  <input type="submit" value="Submit"/>
</form>
